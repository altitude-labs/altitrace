{
  "name": "@altitrace/api",
  "version": "0.1.0",
  "description": "AltiTrace API server for HyperEVM transaction simulation",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "start": "bun dist/server.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "bun tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^17.2.1",
    "fastify": "^5.5",
    "pino": "^9.8.0",
    "pino-logfmt": "^1.0.1",
    "pino-pretty": "^13.1.1",
    "viem": "^2.33.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "typescript": "^5.9.2",
    "eslint": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}