# Server Configuration
PORT=3001
HOST=127.0.0.1
NODE_ENV=development

# HyperEVM Configuration, this should be a rpc that supports debug and tracing rpc endpoints
# for HyperEVM, see the nanoreth node https://github.com/hl-archive-node/nanoreth
RPC_URL=https://

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Logging Configuration
LOG_LEVEL=info
# LOG_LEVEL_STDOUT=info              # Override stdout log level (defaults to LOG_LEVEL)
# LOG_LEVEL_FILE=debug               # Override file log level (defaults to debug)
LOG_FORMAT_STDOUT=logfmt             # logfmt, json, pretty
LOG_FORMAT_FILE=json                 # logfmt, json
LOG_DIR=~/.local/share/altitrace     # Log directory path
LOG_FILENAME=altitrace.log           # Log filename
LOG_ENABLE_FILE=true                 # Enable file logging (false for dev by default)
LOG_PRETTY=true                      # Legacy support

# Example logging configurations:
# Development (pretty console output, no files):
# NODE_ENV=development
# LOG_FORMAT_STDOUT=pretty
# LOG_ENABLE_FILE=false

# Production (logfmt console, JSON files):
# NODE_ENV=production
# LOG_LEVEL_STDOUT=info
# LOG_LEVEL_FILE=debug
# LOG_FORMAT_STDOUT=logfmt
# LOG_FORMAT_FILE=json
# LOG_ENABLE_FILE=true

# API Keys (optional)
API_KEY_HEADER=x-api-key
REQUIRE_API_KEY=false
